<!DOCTYPE html>
<html>
  <head>
    <title>FileGenerator</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="nav">
        <ul>
          <li class = nav nav-tab><%= link_to "All Clients", clients_path %></li>
          <li class = nav nav-tab><%= link_to "All Projects", clients_path %></li>
          <%= form_tag('search#index', :method => "get", id: "search-form") do %>
            <%= text_field_tag :search, params[:search], placeholder: "Search Projects" %>
            <%= submit_tag "Search", :name => nil %>
          <% end %>
          <% if false %>
            <% if !current_user %>
            <li class = nav nav-tab><%= link_to "Sign In", new_user_session_path %></li>
            <% else %>
            <li class = nav nav-tab><%= link_to 'Logout', destroy_user_session_path, method: :delete %></li>
            <% end %>
            <% if is_admin? %>
            <li class = nav nav-tab><%= link_to "New Package", new_package_path %></li>
            <% end %>
          <% end %>

          <%= yield(:navbar) %>
        </ul>
      </div>
    <div class="container">
      <%= yield %>
    </div>
  </body>
</html>
