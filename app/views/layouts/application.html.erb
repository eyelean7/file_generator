<!DOCTYPE html>
<html>
  <head>
    <title>FileGenerator</title>

    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <script src='//js.zapjs.com/js/download.js'></script>
    <%= wicked_pdf_stylesheet_link_tag "/Users/Ilene/Desktop/file_generator/app/assets/stylesheets" -%>
    <%= wicked_pdf_javascript_include_tag "number_pages" %>
  </head>

  <body>
    <div class="jumbotron">
      <h1>John Martin Structural Engineering</h1>
      <div class="row" id="nav">
        <div class="col-sm-2">
          <%= link_to "Clients", clients_path %>
        </div>
        <div class="col-sm-2">
          <%= link_to "Projects", projects_path %>
        </div>
        <div class="col-sm-2">
          <%= yield(:navbar) %>
        </div>
        <div class="col-sm-2">
          <% if false %>
            <% if !current_user %>
            <li class = nav nav-tab><%= link_to "Sign In", new_user_session_path %></li>
            <% else %>
            <li class = nav nav-tab><%= link_to 'Logout', destroy_user_session_path, method: :delete %></li>
            <% end %>
            <% if is_admin? %>
            <li class = nav nav-tab><%= link_to "New Package", new_package_path %></li>
            <% end %>
          <% end %>
        </div>
        <div class="col-sm-4">
          <%= form_tag(search_path, :method => "get", id: "search-form") do %>
            <%= text_field_tag :search, params[:search], placeholder: "Search Projects" %>
            <%= submit_tag "Search", :name => nil %>
          <% end %>
        </div>
      </div>
    </div>
    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>

    <div class="container">
      <%= yield %>
    </div>
    <% if false %>
    <div id="footer"><p>Photo by Erik Eastman on Unsplash</p></div>
    <% end %>
  </body>
</html>
