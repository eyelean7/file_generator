<%= render "layouts/errors", :object => @project %>


<%= form_for [@client, @project] do |f| %>
  <%= f.label :address %>
  <%= f.text_field :address %><br>
  <%= f.label :description %>
  <%= f.text_area :description %><br>
  <%= f.label :price %>
  <%= f.number_field :price, value: number_to_currency(f.object.price.to_f, delimiter: '', unit: ''), step: :any %><br>
  <%= f.submit  %>
<% end %>
