<h1>Search Results</h1>


<% if !(@clients.present? || @projects.present?) %>
<h2>Sorry, no matches were found.</h2>
<% else %>

<% if @clients.present? %>
  <h2>Related Clients</h2>
  <ul>
    <% @clients.each do |client| %>
      <li><%= link_to client.name, client_path(client) %></li>
    <% end %>
  </ul>
<% end %>
<% if @projects.present? %>
  <h2>Related Projects</h2>
  <ul>
    <% @projects.each do |project| %>
      <li><%= link_to project.address, client_project_path(project.client, project) %></li>
    <% end %>
  </ul>
<% end %>
<% end %>
